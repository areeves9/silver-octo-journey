{
  "name": "weather-mcp-server",
  "version": "1.0.0",
  "description": "A simple MCP server with a weather tool using Open-Meteo API",
  "type": "module",
  "bin": {
    "weather-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector node build/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "weather",
    "open-meteo"
  ],
  "author": "Andrew",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^4.21.0",
    "jose": "^6.0.11",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.0",
    "@types/pino-http": "^5.8.4",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
